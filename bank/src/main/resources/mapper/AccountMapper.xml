<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tut2.group3.bank.mapper.AccountMapper">

    <resultMap id="AccountResultMap" type="com.tut2.group3.bank.entity.Account">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="balance" column="balance"/>
        <result property="currency" column="currency"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="selectById" resultMap="AccountResultMap">
        SELECT id,
               user_id,
               user_name,
               balance,
               currency,
               created_at
        FROM account
        WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="AccountResultMap">
        SELECT id,
               user_id,
               user_name,
               balance,
               currency,
               created_at
        FROM account
        WHERE user_id = #{userId}
        LIMIT 1
    </select>

    <insert id="insertAccount" parameterType="com.tut2.group3.bank.entity.Account"
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO account (user_id, user_name, balance, currency, created_at)
        VALUES (#{userId}, #{userName}, #{balance}, #{currency}, #{createdAt})
    </insert>

    <update id="updateAccount" parameterType="com.tut2.group3.bank.entity.Account">
        UPDATE account
        SET user_name = #{userName},
            balance   = #{balance},
            currency  = #{currency}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE
        FROM account
        WHERE id = #{id}
    </delete>

    <select id="countByUserId" resultType="int">
        SELECT COUNT(1)
        FROM account
        WHERE user_id = #{userId}
    </select>

</mapper>
